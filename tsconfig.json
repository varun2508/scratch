{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/components/screen/play/index.js",
    "src/components/navigation/NavigationService.js",
    "src/components/screen/more/index.js"
  ],
  "exclude": ["node_modules", "**/*.test.tsx", "**/*.spec.ts"],
  "types": ["typePatches"],
  "paths": {
    "apis/*": ["src/apis/*"],
    "components/*": ["src/components/*"],
    "providers/*": ["src/providers/*"],
    "screen*": ["src/screen/*"],
    "shared*": ["src/components/shared/*"],
    "assets*": ["src/assets/*"],
    "navigation*": ["src/components/navigation/*"],
    "icons*": ["src/assets/icons/*"],
    "image*": ["src/assets/image/*"]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
        // "tsConfigFile": "my-tsconfig.json"
      }
    }
  },
  "files": ["environment.d.ts"]
}
